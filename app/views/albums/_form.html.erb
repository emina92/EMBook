<div class="row">
	<div class="col-md-4">
		<%= simple_form_for(@album) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-inputs">
		    <%= f.input :title %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, class: "btn btn-success" %>
		  </div>
		<% end %>
	</div>
</div>
