<h3><%= @user_friendship.friend.full_name %></h3>
<p><%= @user_friendship.sub_message %></p>

<div class="form-actions">
	<% if @user_friendship.requested? %>
		<%= form_for @user_friendship, url: accept_user_friendship_path(@user_friendship),
			method: :put, html: {class: "edit-form"} do |form| %>
				<%= submit_tag "Accept Friendship", class: "btn btn-primary" %>
			<% end %>
	<% end %>

	
	<%= form_for @user_friendship, url: block_user_friendship_path(@user_friendship),
		method: :put, html: {class: "edit-form"} do |form| %>
		<%= submit_tag "Block Friendship", class: "btn btn-default" %>
	<% end %>
	
	
	<%= form_for @user_friendship, url: user_friendship_path(@user_friendship),
		method: :delete, html: {class: "edit-form"} do |form| %>
		<%= submit_tag "Delete Friendship", class: "btn btn-danger" %>
	<% end %>

</div>