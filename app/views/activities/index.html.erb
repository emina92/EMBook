<h2>Activity Feed</h2>
<% @activities.each do |activity| %>
<% if activity.persisted? %>
	<div class="media">
		<div class="media-left media-top">
	 		<%= link_to image_tag(activity.user.avatar.url(:thumb), :class => "media-object"), profile_path(activity.user.profile_name) %>
	 	</div>
		<div class="media-body">
			<h4 class="media-heading"><%= activity.user.full_name %></h4>
			<%= render partial: "activities/#{activity.targetable_type.underscore}/#{activity.action}",
			locals: {activity: activity} %>
			<p><small><%= activity.created_at %></small></p>
		</div>
	</div>
	<hr />
<% end %>
<% end %>

<%= will_paginate @activities %>